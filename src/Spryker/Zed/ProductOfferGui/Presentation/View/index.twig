{% extends '@Gui/Layout/layout.twig' %}

{% set page_title = 'View Offer' | trans ~ ': ' ~ productOffer.productOfferReference %}
{% block section_title %}{{ page_title }}{% endblock %}

{% block action %}
    {{ backActionButton(url('/product-offer-gui'), 'Back to Offers' | trans) }}
    {%  for applicableProductOfferStatus in applicableProductOfferStatuses %}
        {% if applicableProductOfferStatus == 'denied' %}
            {{ removeActionButton(url('/product-offer-gui/product-offer-status', {'status': applicableProductOfferStatus, 'id-product-offer': productOffer.idProductOffer}), (applicableProductOfferStatus ~ '_button') | trans, {'icon':'<i class="fa fa-trash"></i> '}) }}
        {% else %}
            {{ createActionButton(url('/product-offer-gui/product-offer-status', {'status': applicableProductOfferStatus, 'id-product-offer': productOffer.idProductOffer}), (applicableProductOfferStatus ~ '_button') | trans, {'icon':'<i class="fa fa-play"></i> '}) }}
        {%  endif %}
    {%  endfor %}
{% endblock %}

{% block content %}
    {% include '@ProductOfferGui/View/_partials/info-offer.twig' %}
    {% include '@ProductOfferGui/View/_partials/info-product.twig' %}
    {% include '@ProductOfferGui/View/_partials/info-plugins.twig' %}
{% endblock %}

{% block head_css %}
    {{ parent() }}
{% endblock %}

{% block footer_js %}
    {{ parent() }}
{% endblock %}
